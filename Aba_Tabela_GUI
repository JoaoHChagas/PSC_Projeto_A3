    private void BotãoCadastroActionPerformed(java.awt.event.ActionEvent evt) {                                              
        DefaultTableModel CadastrarAluno = (DefaultTableModel) TabelaAlunos.getModel();  
        Object[] dados = {TextoAluno.getText(),TextoNotaA1.getText(),TextoNotaA2.getText(),TextoNotaA3.getText(),TextoFaltas.getText()};
        CadastrarAluno.addRow(dados);
    }                                             

    private void TextoNotaA1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void BotãoExluirActionPerformed(java.awt.event.ActionEvent evt) {                                            
        if(TabelaAlunos.getSelectedRow() != -1){
        
        DefaultTableModel CadastrarAluno = (DefaultTableModel) TabelaAlunos.getModel();  
        CadastrarAluno.removeRow(TabelaAlunos.getSelectedRow());
        
       }else{  
        JOptionPane.showMessageDialog(null,"Selecione um produto para excluir.");
        }
        
        
    }                                           

    private void TabelaAlunosMouseClicked(java.awt.event.MouseEvent evt) {                                          
        if(TabelaAlunos.getSelectedRow() != -1){
        
        TextoAluno.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 0).toString());
        TextoNotaA1.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 1).toString());
        TextoNotaA2.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 2).toString());
        TextoNotaA3.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 3).toString());
        TextoFaltas.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 4).toString()); 
        
        }        
    }                                         

    private void TabelaAlunosKeyPressed(java.awt.event.KeyEvent evt) {                                        
        // TODO add your handling code here:
    }                                       

    private void TabelaAlunosKeyReleased(java.awt.event.KeyEvent evt) {                                         
        if(TabelaAlunos.getSelectedRow() != -1){
        
        TextoAluno.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 0).toString());
        TextoNotaA1.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 1).toString());
        TextoNotaA2.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 2).toString());
        TextoNotaA3.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 3).toString());
        TextoFaltas.setText(TabelaAlunos.getValueAt(TabelaAlunos.getSelectedRow(), 4).toString());
        
        }
    }                                        

    private void BotãoAtualizarActionPerformed(java.awt.event.ActionEvent evt) {                                               
         if(TabelaAlunos.getSelectedRow() != -1){
             
         TabelaAlunos.setValueAt(TextoAluno.getText(), TabelaAlunos.getSelectedRow(), 0);
         TabelaAlunos.setValueAt(TextoNotaA1.getText(), TabelaAlunos.getSelectedRow(), 1);
         TabelaAlunos.setValueAt(TextoNotaA2.getText(), TabelaAlunos.getSelectedRow(), 2);
         TabelaAlunos.setValueAt(TextoNotaA3.getText(), TabelaAlunos.getSelectedRow(), 3);
         TabelaAlunos.setValueAt(TextoFaltas.getText(), TabelaAlunos.getSelectedRow(), 4);
         
        }
    }                                              


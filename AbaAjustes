    private void EscolherTemaActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here: 
        String escolha = (String) EscolherTema.getSelectedItem();
        if ("Noite".equals(escolha)) {
                getContentPane().setBackground(Color.BLACK);
        jPanel1.setBackground(Color.DARK_GRAY);
        AtivarNotificacoes.setBackground(Color.DARK_GRAY);
        AtivarNotificacoes.setForeground(Color.WHITE);
        SalvarAlteracoes.setBackground(Color.DARK_GRAY);
        SalvarAlteracoes.setForeground(Color.WHITE);
        AjustesdoSistema.setForeground(Color.WHITE);
        TextoTema.setForeground(Color.WHITE);
        EscolherTema.setBackground(Color.GRAY);
        EscolherTema.setForeground(Color.WHITE);
        AjustesdoSistema.setBackground(Color.DARK_GRAY); 
        SalvarAlteracoes.setBackground(Color.DARK_GRAY); 
        jPanel8.setBackground(Color.DARK_GRAY);
} else {
        getContentPane().setBackground(Color.WHITE);
        jPanel1.setBackground(Color.LIGHT_GRAY);
        AtivarNotificacoes.setBackground(new Color(33, 150, 243));
        AtivarNotificacoes.setForeground(Color.WHITE);
        SalvarAlteracoes.setBackground(Color.LIGHT_GRAY);
        SalvarAlteracoes.setForeground(Color.BLACK);
        AjustesdoSistema.setForeground(Color.BLACK);
        TextoTema.setForeground(Color.BLACK);
        EscolherTema.setBackground(Color.WHITE);
        EscolherTema.setForeground(Color.BLACK);
        AjustesdoSistema.setBackground(Color.LIGHT_GRAY); 
        SalvarAlteracoes.setBackground(Color.LIGHT_GRAY); 
        jPanel8.setBackground(Color.LIGHT_GRAY);
    }
    repaint();
       
    }                                            

    private void SalvarAlteracoesActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
        boolean notificacoesAtivadas = AtivarNotificacoes.isSelected();
    String temaSelecionado = (String) EscolherTema.getSelectedItem();
    String mensagem = "Preferências salvas:\n"
                    + "- Notificações: " + (notificacoesAtivadas ? "Ativadas" : "Desativadas") + "\n"
                    + "- Tema: " + temaSelecionado;
    javax.swing.JOptionPane.showMessageDialog(this, mensagem, "Preferências salvas!", javax.swing.JOptionPane.INFORMATION_MESSAGE);
    SalvarAlteracoes.setSelected(false);
    }                                                

    private void AtivarNotificacoesActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        // TODO add your handling code here:
        if (AtivarNotificacoes.isSelected()) {
    javax.swing.JOptionPane.showMessageDialog(this, "Notificações ativadas!");
        } else {
    javax.swing.JOptionPane.showMessageDialog(this, "Notificações desativadas!");
}
    }                                                  
